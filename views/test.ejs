        src: url('/fonts/MyriadPro-Regular.woff') format('woff'), url('/fonts/MyriadPro-Regular.ttf') format('truetype'), url('/fonts/MyriadPro-Regular.svg') format('svg');
        font-weight: 400;
        font-style: normal;
    }
    /** Generated by FG **/
    
    @font-face {
        font-family: 'MyriadPro';
